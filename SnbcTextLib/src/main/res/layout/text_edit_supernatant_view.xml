<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_supernatant_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">


    <FrameLayout
        android:id="@+id/id_supernatant_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.TabLayout
        android:id="@+id/id_supernatant_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        app:tabIndicatorColor="@android:color/holo_red_light"
        app:tabMode="scrollable"/>

    <com.newbeiyang.snbc.textlib.ui.widget.verticaltablayout.VerticalTabLayout
        android:id="@+id/id_supernatant_tab_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        app:indicator_color="@android:color/holo_red_light"
        app:tab_height="50dp"
        app:tab_mode="scrollable"
        />

</RelativeLayout>